package new_project;
import junit.framework.TestCase;
import static org.junit.Assert.*;
import org.junit.*;


public class junit_t extends TestCase {


  public frame1 frame1;
  /**
  * Аннотация, указывающая на метод, который будет выполняться перед каждым
  * запуском теста
  */
  @Before
  /**
  * Создаем метод, который будет выполняться перед каждым запуском теста;
  * в нем устанавливаем входные параметры для тестирования.
  */
  public void testinit() {
  /**
  * Создаем новый экземпляр класса для его тестирования
  */
frame1 = new frame1();
  /**
  * Присваиваем радиокнопке "квартира" значение "истина"
  * (выбран тип жилья "квартира")
  */
frame1.radiobuttons[0].setSelected(true);
  /**
  * Присваиваем текстовому полю "площадь квартиры" значение 43.7
  */
frame1.accountant_textfields[0].setText("43.7");
  /**
  * Присваиваем текстовому полю "расход горячей воды" значение 5
  */
frame1.accountant_textfields[1].setText("5");
  /**
  * Присваиваем текстовому полю "расход холодной воды" значение 5
  */
frame1.accountant_textfields[2].setText("5");
  /**
  * Присваиваем текстовому полю "расход электроэнергии" значение 110
  */
frame1.accountant_textfields[3].setText("110");
  /**
  * Присваиваем текстовому полю "расход газа" значение 8.5
  */
frame1.accountant_textfields[4].setText("8.5");
  /**
  * Присваиваем текстовому полю "уборка в подъезде" значение 100
  */
frame1.accountant_textfields[6].setText("100");
  /**
  * Присваиваем текстовому полю "освещение в подъезде" значение 50
  */
frame1.accountant_textfields[7].setText("50");
  /**
  * Присваиваем текстовому полю  "уборка улиц" значение 100
  */
frame1.accountant_textfields[8].setText("100");
  /**
  * Присваиваем текстовому полю "капитальный ремонт" значение 200
  */
frame1.accountant_textfields[9].setText("200");
  }
  /**
  * Аннотация, указывающая на то, что за ней следует тестируемый метод.
  */
  @Test
  /**
  * Объявляем метод, который будем тестировать, а именно
  * расчет итоговой суммы квартплаты
  */
  public void test() {
  /**
  * Производим расчет итоговой суммы квартплаты, путем
  * активации кнопки "Расчет" на пользовательской панели
  */
frame1.buttons[1].doClick();
  /**
  * Присваиваем переменной значение 3262.34
  * (верный/ожидаемый результат расчета итоговой суммы
  * квартплаты = 3262.34 руб.)
  */
  Double summary_expected = 3262.34;
  /**
  * Присваиваем переменной значение текстового поля "Итог"
  * (реально получившийся результат в ходе прохождения теста)
  */
  Double summary_actual = Double.valueOf(accountant_panel.accountant_textfields[5].getText());
  /**
  * Сравниваем значения верного (ожидаемого) результата
  * и реально получившегося результата;
  * если результаты равны, тест проходит успешно.
  */
  assertEquals(summary_expected,summary_actual);
  }
  /**
  * Аннотация, указывающая на метод, который будет выполняться после каждого
  * прохождения теста.
  */
  @After
  /**
  * Создаем метод, который будет выполняться после каждого прохождения теста
  */
  public void teststop(){
  /**
  * Обнуляем переменную после завершения теста
  */
frame1 = null;
  }
}
